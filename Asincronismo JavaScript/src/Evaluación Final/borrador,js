//funcion para los perros favoritos
const getDogsFavorite = async () =>{
    const response = await fetch(urlApiDogFavorite);
    const data = response.json();
    const Array = [];
    data.map(catg => {
        const img = document.createElement('img');
        img.src = catg.image.url
        img.alt = user_id;
        img.classList.add('img-favorite');
        img.setAttribute('alt',catg.user_id);
        img.width = 200;
        img.height = 200;
        Array.push(img);
        //Creando el boton
        const boton = document.createElement('boton');
        boton.innerHTML = "Eliminar de favoritos";
        boton.onclick = () =>{

        }
        Array.push(boton);
    });
    div.append(...array);
    console.log(data[0].image);
}
//funcion para agregar los gatos a favoritos
